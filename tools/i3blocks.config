[volume]
label=♪ 
#label=VOL:
command=~/.config/i3blocks/contrib/volume/volume
interval=once
signal=10
#STEP=5%

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=MEM:
command=~/.config/i3blocks/contrib/memory/memory
separator=false
interval=30

[memory]
label=SWAP:
instance=swap
command=~/.config/i3blocks/contrib/memory/memory
interval=30

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=HOME 
command=~/.config/i3blocks/contrib/disk/disk
#DIR=/mnt/data
interval=30

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[iface]
#IFACE=wlp1s0
#LABEL=wlp1s0:
command=zsh ~/.config/i3blocks/contrib/iface/iface
color=#00FF00
interval=10

[bandwidth]
#INTERFACE=eth0
interval=5

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label=CPU
#command=~/.config/i3blocks/contrib/cpu/cpu
interval=10
min_width=CPU 100.00%
#separator=false

[load_average]
command=~/.config/i3blocks/contrib/load_average/load_average
label=LOAD:
interval=10

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=⚡
command=perl ~/.config/i3blocks/contrib/battery/battery
interval=10


# Date Time
#
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5

[keyindicator]
command=~/.config/i3blocks/contrib/keyindicator/keyindicator
#KEY=CAPS
markup=pango
interval=once
signal=11

[key_layout]
command=/home/nico/.config/i3blocks/key_layout
label=⌨️
interval=2
separator=true

# Generic media player support
#
# This displays "ARTIST - SONG" if a music is playing.
# Supported players are: spotify, vlc, audacious, xmms2, mplayer, and others.
#[mediaplayer]
#instance=spotify
#interval=5
#signal=10

# OpenVPN support
#
# Support multiple VPN, with colors.
#[openvpn]
#interval=20

# Temperature
#
# Support multiple chips, though lm-sensors.
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
#[temperature]
#label=TEMP
#interval=10

