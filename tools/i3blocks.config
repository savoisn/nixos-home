[volume]
label=♪
#label=VOL
command=/run/current-system/sw/libexec/i3blocks/volume
interval=once
signal=10
#STEP=5%

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=MEM
command=/run/current-system/sw/libexec/i3blocks/memory
separator=false
interval=30

[memory]
label=SWAP
instance=swap
command=/run/current-system/sw/libexec/i3blocks/memory
interval=30

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=HOME
command=/run/current-system/sw/libexec/i3blocks/disk
#DIR=/mnt/data
interval=30

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[iface]
#IFACE=wlan0
command=/run/current-system/sw/libexec/i3blocks/iface
color=#00FF00
interval=10

[bandwidth]
#INTERFACE=eth0
interval=5

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label=CPU
command=/run/current-system/sw/libexec/i3blocks/cpu
interval=10
min_width=CPU 100.00%
#separator=false

[load_average]
command=/run/current-system/sw/libexec/i3blocks/load
label=LOAD
interval=10

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=⚡
command=/run/current-system/sw/libexec/i3blocks/battery
interval=10


# Date Time
#
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5


[key_layout]
command=/home/nico/.config/i3blocks/key_layout
label= ⌨️
interval=2
separator=true

# Generic media player support
#
# This displays "ARTIST - SONG" if a music is playing.
